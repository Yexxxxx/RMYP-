<!--pages/login/login.wxml-->
<view class="container"> 
  <view class="login-icon">  
    <image class="login-img" src="/images/logo.png"></image>  
  </view>  
  <view class="login-from">  
  <form bindsubmit="formSubmit" class='form'>
    <view class="myno">
    <!-- 学号 -->
            <input class="input" name="no" bindinput="noinput" value='{{no}}' placeholder-class='placeholder_class' placeholder="请输入学号" />
    </view>
    <view class="mypwd">
      <!-- 密码 -->
        <input class="input" type="password" name="pwd" bindinput="pwdinput" placeholder-class='placeholder_class' placeholder="请输入密码" value='{{pwd}}'/>
    </view>
 
     <!--按钮-->  
    <view class="loginBtnView">  
      <button class="loginBtn" size="{{primarySize}}"  form-type='submit' disabled='{{disabled}}'>登录</button>  
      <button class="signBtn" bindtap="goto_sign">新号注册</button>  
      <button class="signBtn" bindtap="goto_passwd_back">找回密码</button>  
    </view>  
    </form>
  
  </view>  
</view> 
