/* pages/passwd_back/passwd_back.wxss */
page{
  height: 100%;
  background-size:100%;
}
 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  /* background-color: #f2f2f2;     */
} 
 
/*登录图片*/
.login-icon{
  flex: none;
  margin: 0 auto;
  margin-top: 200rpx;
}
.login-img{
  width: 220rpx;
  height: 220rpx;
  border-radius: 110rpx;
  opacity: 0.6;
}
 
/*表单内容*/
.login-from {
  margin-top: 90px;
  flex: auto;
  height:100%;
}
 
/* 输入框 */
.passwd_back_input{
  width: 90%;
  height: 90rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
 
}

/*按钮*/
.passwd_back_BtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.passwd_back_Btn {
  width: 90%;
  height: 80rpx;
  line-height: 45rpx;
  margin-top: 45rpx;
  color: #fff;
  background-color:#7e8ef0;
  border: 0.1rpx solid #ccc;
  border-radius: 40rpx;
}

.input{
  text-align: center;
	height:20px;
	min-height:2.4rem;
}
.placeholder_class{
  font-size:auto;
  font-family: Microsoft YaHei;
  color: #c0c4cc;
	height:20px;
	min-height:0.4rem;
}